
    <%= form_for :project , url: "/users/:id/projects", method: :post do |f|%>
        <%= f.hidden_field :user_id, value: @user.id %>
        <fieldset><br>
            <%= f.label :name %>
            <%= f.text_field :name%>
        </fieldset><br>
        <fieldset><br>
            <%= f.label :description %>
            <%= f.text_area :description %>
        </fieldset><br>

        <fieldset><br>
        <%= f.fields_for :project_requirements do |requirement| %>
          <%= f.label :deadline %>
          <%= requirement.text_field :deadline %>
        <% end %>
       </fieldset><br>
       <fieldset><br>
        <%= f.fields_for :requirements do |requirement| %>
          <%= f.label :description %>
          <%= requirement.text_field :description %>
        <% end %>
       </fieldset><br>
  
     <%= f.submit "Create project" %>
   <% end %>


   