
    <%= form_for @project do |f|%>
      <%= f.hidden_field :user_id, value: @user.id %>
        <fieldset><br>
            <%= f.label :name %>
            <%= f.text_field :name%>
        </fieldset><br>
        <fieldset><br>
            <%= f.label :description %>
            <%= f.text_area :description %>
        </fieldset><br>

       <fieldset><br>
        <%= f.fields_for :requirements, @project.requirements.build do |requirement| %>
          <%= f.label :description %>
          <%= requirement.text_field :description %>
        <% end %>
       </fieldset><br>
  
     <%= f.submit "Create project" %>
   <% end %>


   