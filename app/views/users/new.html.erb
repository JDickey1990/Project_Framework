<%= form_for :user do |f| %>
    <fieldset><br>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    </fieldset><br>

    <fieldset><br>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    </fieldset><br>

    <fieldset><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
    </fieldset><br>

    <%= f.submit "Create User" %><br>
<% end %>