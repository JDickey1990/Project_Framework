<section >
    <nav class="navbar">
        <div class="container-fluid">
            <ul class="main-nav">
                <li><a href="#"><%= link_to "Welcome Page", root_path %></a></li>
            </ul>
        </div>
    </nav> 
    <div class="row justify-content-center">
        <div class="col-4 form">
        <%= form_for @user do |f|  %>
            <fieldset>
                <div class="py-5 text-center container">
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <input type="text" placeholder="Name" aria-label="Name" <%= f.text_field :name, class: "form-control" %> 
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <input type="text" placeholder="Email" aria-label="Email"  <%= f.text_field :email, class: "form-control" %>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <input type="text" placeholder="Password" aria-label="Password"  <%= f.password_field :password, class: "form-control" %>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <%= render partial: '/layouts/errors', locals: {object: @user} %>
                        </div>
                    </div>
                    <div class="btn-login">
                        <%= f.submit "Sign Up", class:"btn btn-primary my2" %>
                    </div>
                </div>
            </fieldset>  
        <% end %>
        </div>
        <div class="col-4 third-party">
            <div class="text-center">
                <h4>Or you can sign up with Google!</h4>
                <%= button_to "Sign Up With Google", '/auth/google_oauth2', class:"btn btn-outline-dark my-2 text-center" %>
            </div>
        </div>
    </div>
</section>