<%= render partial: '/layouts/errors', locals: {object: @user} %>

<h1> Sign up </h1>
<%= form_for @user do |f| %>
    <fieldset><br>
        <%= f.label :name %><br>
        <%= f.text_field :name %><br><br>

        <%= f.label :email %><br>
        <%= f.text_field :email %><br><br>

        <%= f.label :password %><br>
        <%= f.password_field :password %><br><br>
    </fieldset><br>
    <%= f.submit "Create User" %><br>
<% end %>